 */

?>
<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
$margin = (int)Mage::getStoreConfig('mtbejewelry/product_page/zoom_margin');
?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage() && Mage::getStoreConfig('mtbejewelry/product_page/zoom_enable')): ?>
    <p class="product-image">
        <a class="cloud-zoom" id="zoomID" style="position: relative; display: block;" rel="<?php echo Mage::helper('mtbejewelry')->getCloudZoomConfig(true)?>" href="<?php echo $this->helper('catalog/image')->init($_product, 'image')?>">
            <img class="img-responsive" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" style="display: block" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image')->resize(517,577)?>">
        </a>
    </p>
<?php else: ?>
    <p class="product-image">
        <?php
        $_img = '<img style="display: block;" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(400).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
        ?>
    </p>
<?php endif; ?>

