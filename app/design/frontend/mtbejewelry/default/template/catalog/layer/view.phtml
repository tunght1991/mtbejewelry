/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>

<?php if ($this->canShowBlock()): ?>
    <div class="block block-layered-nav">
        <div class="block-title col-lg-4">
            <div class="title-block">
                <strong><span><?php echo $this->__('Filter') ?></span></strong>
            </div>
            <div class="content-block">
            <p>Enjoy complimentary shipping</p>
            <p>on orders of $150 or more</p>
            <?php echo $this->getLayout()->createBlock("tag/popular")->setTemplate("tag/popular.phtml")->toHtml();?>
            </div>
        </div>
        <div class="block-content col-lg-8">
            <div class="row list-filter">
                <?php if ($this->canShowOptions()): ?>
                    <div id="narrow-by-list">
                        <?php $_filters = $this->getFilters() ?>
                        <?php foreach ($_filters as $_filter): ?>
                            <?php if ($_filter->getItemsCount()): ?>

                                    <div class="row">
                                    <div class="title-filter col-lg-2"><?php if($_filter->getName()=='Category'){echo "Categories:";}else{echo $this->__($_filter->getName().":");}?></div>
                                    <div class="col-lg-10 attribute-filter"><?php echo $_filter->getHtml() ?></div>
                                    </div>
                            <?php endif; ?>
                        <?php endforeach; ?>
                    </div>
                    <script type="text/javascript">decorateDataList('narrow-by-list')</script>
                <?php endif; ?>
            </div>
        </div>
    </div>
<?php endif; ?>
