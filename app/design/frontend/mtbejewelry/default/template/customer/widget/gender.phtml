<div class="col2 gender-col">
    <div class="input-box">
        <?php $options = Mage::getResourceSingleton('customer/customer')->getAttribute('gender')->getSource()->getAllOptions();?>
        <?php $value = $this->getGender();?>
        <?php foreach ($options as $option):?>
            <?php if($option['label']!=""):?>
            <input type="radio" id="<?php echo $option['value']==1?"genderm":"genderf" ?>" name="<?php echo $this->getFieldName('gender')?>" value="<?php echo $option['value'] ?>" />
            <label for="<?php echo $option['value']==1?"genderm":"genderf" ?>"><?php echo $option['label'] ?></label>
            <?php endif;?>
        <?php endforeach;?>
    </div>
</div>